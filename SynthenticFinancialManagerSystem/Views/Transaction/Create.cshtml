@using SynthenticFinancialManagerSystem.Core.Entities;

@model ETransaction

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdTransaction" />
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<ETransactionType>()">
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NameOrig" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NameOrig" class="form-control" />
                <span asp-validation-for="NameOrig" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NameDest" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NameDest" class="form-control" />
                <span asp-validation-for="NameDest" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}